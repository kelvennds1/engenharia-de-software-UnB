%h2 Details about #{@movie.title}

%ul#details
    %li
        Rating:
        = @movie.rating
    %li
        Released on:
        = @movie.release_date.strftime("%B %d, %Y")
    
%h3

%p#description= @movie.description

.button-container
    = button_to 'Edit info', edit_movie_path(@movie), method: :get, class: 'edit'
    = button_to 'Delete', movie_path(@movie), method: :delete, class: 'delete', data: {confirm: "Are you sure?"}
    = button_to 'Back', movies_path, method: :get, class: 'back'
